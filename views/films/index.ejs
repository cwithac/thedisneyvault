<!DOCTYPE html>
<html>
  <head>
<% include ../partials/head %>
  </head>
  <body id="filmsandcharacters">
    <nav>
      <ul>
          <li><a href="/"><img id="navlogo" src="../images/balloons.jpg"></img></a></li>
          <li><a href="/films">View Films</a></li>
          <li><a href="/characters">View Characters</a></li>
          <li><a href="#">Profile</a></li>
          <li id="logout"><form action="/sessions?_method=DELETE" method="POST">
            <input id="logout" type="submit" value="Log Out" />
          </form></li>
      </ul>
    </nav>
    <main class="container">
      <h1>The Film Library</h1>
      <a href="/films/add">Add Film to Library</a>
      <br/>
      <ul class="index">
        <% for (var i = 0; i < films.length; i++) { %>
          <li>
              <a href="/films/<%=films[i]._id%>"><img class="poster" src="<%=films[i].poster%>"></a>
          </li>
      <% } %>
      </ul>
    </main>
  </body>
</html>
