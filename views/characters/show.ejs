<!DOCTYPE html>
<html>
  <head>
<% include ../partials/head %>
  </head>
  <body class="clouds">
    <nav>
      <% include ../partials/nav %>
    </nav>
    <main class="charcontainer" class="container">

      <div class="charshow">
        <div>
          <img class="char-poster" src="<%=character.headshot%>"></img>
        </div>
      <div class="charcontent">
        <h1><%=character.name%></h1>
      </br>
        <span class="listing">Film:</span> <a href="/films/<%=film._id%>"><%=film.Title%></a>
      </br>
        <span class="listing">Setting:</span> <%=character.location%>
      </br>
        <span class="listing">Type:</span> <%=character.kind%>
            </br>
        <span class="listing">Nemsis:</span> <%=character.enemy%>
      </br>
        <span class="listing">Love Interest:</span> <%=character.love%>
      </br>
        <span class="listing">Sidekicks:</span> <%=character.friends%>
      </br>
        <span class="quote"><%=character.quote%></span>
      </div>
      </div>
    </main>
    <footer>
      <ul class="centerfooter">
        <ul class="centerfooter">
          <% if (currentUser) { %>
            <li><a  href="/films/add">Add a Film</a></li>
            <li><a href="/characters/add">Add a Character</a></li>
            <li>|</li>
            <li><a href="/characters/<%=character._id%>/edit">Edit <%=character.name%></a></li>
            <li class="logout"><form action="/characters/<%=character._id%>?_method=DELETE" method="POST">
              <input class="logout" type="submit" value="Delete <%=character.name%>">
            </form></li>
          <% } else { %>
            <% include ../partials/footer %>
          <% } %>
        </ul>
      </ul>
    </footer>
  </body>
</html>
